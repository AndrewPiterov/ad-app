<h1><%= @title %></h1>

<form action="/create" method="post" id="ad" enctype="multipart/form-data">
  <p>
    <label>Title:</label>
    <input type="text" id="title" name="ad[title]" />
  </p>
  <p>
    <label>Width:</label>
    <input type="text" id="width" name="ad[width]" />
  </p>
  <p>
    <label>Height:</label>
    <input type="text" id="height" name="ad[height]" />
  </p>
  <p>
    <label>Filename:</label>
    <input type="text" id="filename" name="ad[filename]" />
  </p>
  <p>
    <label>URL:</label>
    <input type="text" id="url" name="ad[url]" />
  </p>
  <p>
    <label>Content:</label>
    <input type="text" id="content" name="ad[content]" />
  </p>
  <p>
    <label>File:</label>
    <input type="file" id="image" name="image" />
  </p>
  <p>
    <input type="submit" />
    </p>
</form>